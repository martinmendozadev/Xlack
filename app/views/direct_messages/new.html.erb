<turbo-frame id="modal">
  <div class="fixed inset-0 bg-gray-900 bg-opacity-75 flex items-center justify-center z-50">

    <div class="bg-white rounded-lg shadow-xl w-full max-w-md mx-4 overflow-hidden">

      <div class="px-6 py-4 border-b border-gray-200 flex justify-between items-center bg-gray-50">
        <h3 class="text-lg font-medium text-gray-900"><%= t("direct_messages.new.title") %></h3>
        <%= link_to root_path, class: "text-gray-400 hover:text-gray-500" do %>
          <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path></svg>
        <% end %>
      </div>

      <div class="p-0 overflow-y-auto max-h-96">
        <% if @users.any? %>
          <div class="divide-y divide-gray-100">
            <% @users.each do |user| %>

              <%= button_to direct_messages_path(user_id: user.id),
                  method: :post,
                  data: { turbo_frame: "_top" },
                  class: "w-full px-6 py-3 flex items-center hover:bg-gray-50 transition duration-150 ease-in-out text-left" do %>

                <div class="h-10 w-10 rounded bg-blue-100 flex items-center justify-center text-blue-600 font-bold mr-4">
                  <%= user.username[0].upcase %>
                </div>

                <div>
                  <p class="text-sm font-medium text-gray-900"><%= user.username %></p>
                  <p class="text-xs text-gray-500"><%= user.email %></p>
                </div>

              <% end %>

            <% end %>
          </div>
        <% else %>
          <div class="p-6 text-center text-gray-500">
            <%= t("direct_messages.new.select_user") %>
          </div>
        <% end %>
      </div>

    </div>
  </div>
</turbo-frame>
