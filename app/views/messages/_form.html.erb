<%= form_with(model: [channel, Message.new],
              id: "new_message_form",
              class: "relative") do |f| %>

  <%= f.text_field :content,
      class: "w-full border border-gray-300 rounded-lg p-3 pr-12 focus:ring-2 focus:ring-blue-500 focus:outline-none shadow-sm",
      placeholder: t("channels.placeholder") + " ##{channel.name}...",
      autocomplete: "off" %>

  <button type="submit" class="absolute right-3 top-3 text-gray-400 hover:text-blue-600">
    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
      <path stroke-linecap="round" stroke-linejoin="round" d="M6 12L3.269 3.126A59.768 59.768 0 0121.485 12 59.77 59.77 0 013.27 20.876L5.999 12zm0 0h7.5" />
    </svg>
  </button>
<% end %>
